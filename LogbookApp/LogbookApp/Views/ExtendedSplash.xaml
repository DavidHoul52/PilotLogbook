<Page
    x:Class="LogbookApp.Views.ExtendedSplash"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LogbookApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="180"/>
        </Grid.RowDefinitions>
        <Canvas Grid.Row="0">
            <Image x:Name="extendedSplashImage" Source="ms-appx:///Assets/3937008655_355989317c.jpg"  />
            <ProgressRing x:Name="ProgressRing" Foreground="White" 
HorizontalAlignment="Center" IsActive="True" 
        MaxHeight="40" MinHeight="40" MaxWidth="40" 
MinWidth="40"></ProgressRing>
        </Canvas>
      
        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
           <TextBlock Text="Pilot's LogBook" FontSize="38"></TextBlock>
        </StackPanel>
    </Grid>
</Page>