<common:LayoutAwarePage xmlns:LogbookApp="using:LogbookApp" 
    x:Name="pageRoot"
    x:Class="LogbookApp.Views.FlightDetailPage1"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LogbookApp.Views"
    xmlns:common="using:LogbookApp.Common"
                        xmlns:controls="using:LogbookApp.Controls.TemplatedControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>

        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">Flight</x:String>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="26"></Setter>
        </Style>
        <Style x:Key="AddAircraftButtonStyle" TargetType="ButtonBase" BasedOn="{StaticResource AppBarButtonStyle}">
            <Setter Property="AutomationProperties.AutomationId" Value="AddAppBarButton"/>
            <Setter Property="AutomationProperties.Name" Value="Add Aircraft"/>
            <Setter Property="Content" Value="&#xE109;"/>
            <Setter Property="Foreground" Value="Yellow"></Setter>
        </Style>

        <Style x:Key="AddAircraftTypeButtonStyle" TargetType="ButtonBase" BasedOn="{StaticResource AppBarButtonStyle}">
            <Setter Property="AutomationProperties.AutomationId" Value="AddAppBarButton"/>
            <Setter Property="AutomationProperties.Name" Value="Add Aircraft Type"/>
            <Setter Property="Content" Value="&#xE109;"/>
            <Setter Property="Foreground" Value="Orange"></Setter>
        </Style>
        <Style x:Key="AddAirfieldFromButtonStyle" TargetType="ButtonBase" BasedOn="{StaticResource AppBarButtonStyle}">
            <Setter Property="AutomationProperties.AutomationId" Value="AddAppBarButton"/>
            <Setter Property="AutomationProperties.Name" Value="Add Airfield"/>
            <Setter Property="Content" Value="&#xE109;"/>
            <Setter Property="Foreground" Value="Green"></Setter>
        </Style>
        <Style x:Key="AddAirfieldToButtonStyle" TargetType="ButtonBase" BasedOn="{StaticResource AppBarButtonStyle}">
            <Setter Property="AutomationProperties.AutomationId" Value="AddAppBarButton"/>
            <Setter Property="AutomationProperties.Name" Value="Add Airfield To"/>
            <Setter Property="Content" Value="&#xE109;"/>
            <Setter Property="Foreground" Value="Green"></Setter>
        </Style>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Page.BottomAppBar>
        <AppBar x:Name="btmAppBar" Padding="10,0,10,0">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Style="{StaticResource AddAircraftButtonStyle}" 
                            Command="{Binding AddAircraftCommand,Mode=TwoWay}"   />
                    <Button Style="{StaticResource AddAircraftTypeButtonStyle}" 
                            Command="{Binding AddAircraftTypeCommand,Mode=TwoWay}"  />
                    <Button Style="{StaticResource AddAirfieldFromButtonStyle}" 
                            Command="{Binding AddAirfieldFromCommand,Mode=TwoWay}"  />
                    <Button Style="{StaticResource AddAirfieldToButtonStyle}" 
                            Command="{Binding AddAirfieldToCommand,Mode=TwoWay}"  />
                    <Button Style="{StaticResource TotalsAppBarButtonStyle}"  Command="{Binding TotalsCommand,Mode=TwoWay}"  />

                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    
                    <Button Style="{StaticResource HelpAppBarButtonStyle}" />
                </StackPanel>
            </Grid>
        </AppBar>
    </Page.BottomAppBar>
    
    
    <Grid Style="{StaticResource LayoutRootStyle}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="51*"/>
            <ColumnDefinition Width="632*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Grid.Column="1">
       
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>
            
            <StackPanel Grid.ColumnSpan="2">
                
                <TextBlock Text="Date:"/>
                <controls:DavidsDateControl Date="{Binding Flight.Date,Mode=TwoWay}"></controls:DavidsDateControl>
                <Rectangle Height="10"></Rectangle>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Type:" Width="230" />
                    <TextBlock Text="Reg:"/>
                </StackPanel>
                <Rectangle Height="10"></Rectangle>
                <StackPanel Orientation="Horizontal">
                <ComboBox Width="200"  HorizontalAlignment="Left" ItemsSource="{Binding Flight.Lookups.AcTypes}"
                          DisplayMemberPath="Code" 
                          SelectedItem="{Binding Flight.AcType,Mode=TwoWay}" ></ComboBox>
                <Rectangle Width="30"></Rectangle>
              <ComboBox Width="200"  HorizontalAlignment="Left" ItemsSource="{Binding Flight.Lookups.Aircraft}" 
                        DisplayMemberPath="Reg" 
                          SelectedItem="{Binding Flight.Aircraft,Mode=TwoWay}" ></ComboBox>
                </StackPanel>
                <Rectangle Height="10"></Rectangle>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Captain:" Width="230" />
                    <TextBlock Text="Capacity:" />
                </StackPanel>
                <Rectangle Height="10"></Rectangle>
                <StackPanel Orientation="Horizontal">
                  <TextBox Width="200" Text="{Binding Flight.Captain,Mode=TwoWay}" HorizontalAlignment="Left"></TextBox>
                   <Rectangle Width="30"></Rectangle>
                  <ComboBox Width="200" HorizontalAlignment="Left" ItemsSource="{Binding Flight.Lookups.Capacity}" 
                            SelectedItem="{Binding Flight.Capacity,Mode=TwoWay}"
                            DisplayMemberPath="Description"></ComboBox>
                  </StackPanel>
                <Rectangle Height="10"></Rectangle>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="From:" Width="230"/>
                    <TextBlock Text="To:" />
                </StackPanel>
                <Rectangle Height="10"></Rectangle>
                <StackPanel Orientation="Horizontal">
                    <ComboBox Width="200" ItemsSource="{Binding Flight.Lookups.Airfields}" DisplayMemberPath="Name"
                              SelectedItem="{Binding Flight.From, Mode=TwoWay}"
                              HorizontalAlignment="Left"></ComboBox>
                    <Rectangle Width="30"></Rectangle>
                    <ComboBox Width="200" ItemsSource="{Binding Flight.Lookups.Airfields}" DisplayMemberPath="Name" 
                              SelectedItem="{Binding Flight.To, Mode=TwoWay}"
                              HorizontalAlignment="Left"></ComboBox>
                </StackPanel>
                <Rectangle Height="10"></Rectangle>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Depart:" Width="230"/>
                    <TextBlock Text="Arrive:" />
                </StackPanel>
                <Rectangle Height="10"></Rectangle>
                <StackPanel Orientation="Horizontal">
                    <controls:SelectedTimeControl  Time="{Binding Depart,Mode=TwoWay}" HorizontalAlignment="Left"></controls:SelectedTimeControl>
                    
                    <Rectangle Width="30"></Rectangle>
                    <controls:SelectedTimeControl  Time="{Binding Arrival,Mode=TwoWay}" HorizontalAlignment="Left"></controls:SelectedTimeControl>
                    <Rectangle Width="30"></Rectangle>
                    <TextBlock Width="150" Text="{Binding Flight.DurationStr}" Foreground="Yellow" FontSize="32"></TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="TakeOffs/Landings"  VerticalAlignment="Bottom" Width="Auto"/>
                  
                </StackPanel>
                <Rectangle Height="10"></Rectangle>
                <StackPanel Orientation="Horizontal">
                    <ComboBox Width="85" SelectedValue="{Binding Flight.LDG,Mode=TwoWay}"  ItemsSource="{Binding Numbers}"></ComboBox>
                    
                    <Rectangle Width="70"></Rectangle>
                    <CheckBox Content="Night" IsChecked="{Binding Flight.Night,Mode=TwoWay}" FontSize="26" VerticalContentAlignment="Center"></CheckBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Remarks:"/>
                    
                </StackPanel>
                <Rectangle Height="10"></Rectangle>
                <StackPanel Orientation="Horizontal">
                    <TextBox Width="662" Text="{Binding Flight.Remarks,Mode=TwoWay}"></TextBox>
                    
                </StackPanel>
                <Rectangle Height="10"></Rectangle>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Instrument Flying:" Width="230"/>
                    <TextBlock Text="Simulated Instrument Flying:" />
                </StackPanel>
                <Rectangle Height="10"></Rectangle>
                <StackPanel Orientation="Horizontal">
                    <controls:SelectedTimeControl  Time="{Binding Flight.InstrumentFlying,Mode=TwoWay}" HorizontalAlignment="Left"></controls:SelectedTimeControl>

                    <Rectangle Width="30"></Rectangle>
                    <controls:SelectedTimeControl  Time="{Binding Flight.SimulatedInstrumentFlying,Mode=TwoWay}" HorizontalAlignment="Left"></controls:SelectedTimeControl>
                    
                </StackPanel>



            </StackPanel>
        </Grid>
        <!-- Back button and page title -->
        <Grid Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton" Click="GoBack" IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}"/>
            <TextBlock x:Name="pageTitle" Grid.Column="1" Text="{StaticResource AppName}" Style="{StaticResource PageHeaderTextStyle}"/>
        </Grid>

        <VisualStateManager.VisualStateGroups>

            <!-- Visual states reflect the application's view state -->
            <VisualStateGroup x:Name="ApplicationViewStates">
                <VisualState x:Name="FullScreenLandscape"/>
                <VisualState x:Name="Filled"/>

                <!-- The entire page respects the narrower 100-pixel margin convention for portrait -->
                <VisualState x:Name="FullScreenPortrait">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PortraitBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

                <!-- The back button and title have different styles when snapped -->
                <VisualState x:Name="Snapped">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pageTitle" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedPageHeaderTextStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</common:LayoutAwarePage>
